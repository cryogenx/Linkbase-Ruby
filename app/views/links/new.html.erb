<div class="booyah-box col-xs-10 col-xs-offset-1">
<h1>Add a new link</h1>
  <%= simple_form_for @link, url: {action: "create"} do |f| %>
  <%= f.input :name %>
  <%= f.input :url %>
  <%= f.input :window, collection: Link::WINDOW_CHOICES %>
  <%= f.input :category_id, collection: current_user.categories.all %>
  <br />
  <%= f.submit "Create", :class => 'btn btn-primary' %>
  <br />
<% end %>
<br />
</div>