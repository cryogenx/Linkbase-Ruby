<br />
<div class="booyah-box col-xs-10 col-xs-offset-1">
<h1>Add a new link</h1>
  <%= simple_form_for @link do |f| %>
  <%= f.input :name %>
  <%= f.input :url %>
  <%= f.input :window, collection: Link::WINDOW_CHOICES, :include_blank => false %>
  <%= f.input :category_id, collection: current_user.categories.all, :include_blank => false %>
  <br />
  <%= f.submit "Update", :class => 'btn btn-primary' %>
  <br />
<% end %>
<br />
</div>